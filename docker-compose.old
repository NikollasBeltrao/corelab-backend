version: '3.9'

services:
  app:
    build:
      context: .
      dockerfile: Dockerfile
    working_dir: /var/www
    restart: unless-stopped
    tty: true
    volumes:
      - ./:/var/www
      - ./docker/php/local.ini:/usr/local/etc/php/conf.d/local.ini
      - my_data:/var/www/storage/cache
    networks:
      - app-network
    depends_on:
      - db

  db:
    image: mysql:8.0
    container_name: mysql-db
    environment:
      - MYSQL_ROOT_PASSWORD=pass
      - MYSQL_DATABASE=corelab_challenge
      - MYSQL_USER=corelab
      - MYSQL_PASSWORD=corelab
      - TZ=UTC
    ports:
      - "3308:3306"
    volumes:
      - mysql_data:/var/lib/mysql
      - ./docker/mysql/my.cnf:/etc/mysql/my.cnf
    networks:
      - app-network

  phpmyadmin:
    image: phpmyadmin/phpmyadmin:latest
    links:
      - db
    ports:
      - "8001:80"
    environment:
      - PMA_ARBITRARY=1
      - UPLOAD_LIMIT=100M
    networks:
      - app-network

  web:
    image: nginx:alpine
    container_name: nginx-web
    restart: unless-stopped
    tty: true
    ports:
      - "8000:80"
    volumes:
      - ./:/var/www
      - ./docker/nginx/conf.d/:/etc/nginx/conf.d/
    depends_on:
      - app
    networks:
      - app-network
networks:
  app-network:

volumes:
  my_data:
  mysql_data:
